# Alsa settings
set output_plugin=alsa
set dsp.alsa.device=default
set mixer.alsa.device=default
set mixer.alsa.channel=Master

# Unbind default keys
unbind common <
unbind common >
unbind common p
unbind common z

# ncmpcpp bindings
bind common < player-prev
bind common > player-next
bind common p player-pause
bind common z toggle shuffle

# Song format
set format_current= %a - %l -%3n. %t%=
set format_playlist=%-30%a %t%=%d

# Settings
set mouse=true
set resume=true
set set_term_title=false
set status_display_program=cmus-status


# Theme (for use with wal)
set color_cmdline_bg=0
set color_cmdline_fg=7
set color_error=1
set color_info=3
set color_separator=15
set color_statusline_bg=0
set color_statusline_fg=7
set color_titleline_bg=1
set color_titleline_fg=7
set color_win_bg=0
set color_win_cur=15
set color_win_cur_sel_bg=7
set color_win_cur_sel_fg=0
set color_win_dir=7
set color_win_fg=7
set color_win_inactive_cur_sel_bg=8
set color_win_inactive_cur_sel_fg=0
set color_win_inactive_sel_bg=1
set color_win_inactive_sel_fg=0
set color_win_sel_bg=7
set color_win_sel_fg=0
set color_win_title_bg=1
set color_win_title_fg=7
